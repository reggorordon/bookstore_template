<!DOCTYPE html>
<html>
<head>
    <title><%=@page_title ? @page_title:  "Welcome" %> </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <!-- /adding in active navbar links -->
          <li class ="<%= params[:controller]=='books' ? 'active' : '' %>"><%= link_to 'Home', root_path %> </li>
        <li class ="<%= params[:controller]=='about' ? 'active' : '' %>"><%= link_to 'About', about_path %> </li>
          <li class ="<%= params[:controller]=='about' ? 'active' : '' %>"><%= link_to 'Books', books_path %> </li>
      </ul>

         <ul class="nav navbar-nav">
<li class="dropdown navbar-right">
  <a href ='#' class ="dropdown-toggle " data-toggle ='dropdown'>Add New<span class="caret"></span></a>
  <ul class="dropdown-menu">
      <li><%= link_to 'Book', new_book_path %> </li>
      <li><%= link_to 'Category', new_catagory_path %> </li>
      <li><%= link_to 'Author', new_author_path %> </li>
      <li><%= link_to 'Publisher', new_publisher_path %> </li>
  </ul>
</li>
             <li class="dropdown navbar-right">
  <a href ='#' class ="dropdown-toggle pull-right" data-toggle ='dropdown'>Edit Resources<span class="caret"></span></a>
  <ul class="dropdown-menu">
        <li><%= link_to 'Book', books_path %> </li>
      <li><%= link_to 'Category', catagories_path %> </li>
      <li><%= link_to 'Author', authors_path %> </li>
      <li><%= link_to 'Publisher', publishers_path %> </li>
  </ul>
</li>
        </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

    <header>
    	
    		<h1>The BookStore </h1>
    
    </header>
    
    
<% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>
    <section>
    	<div class="container">
    		<div class="row">
    			<div class="col-md-8">
					<%= yield %>
				</div>
				<div class="col-md-4">
					<%= render 'partials/sidebar' %>
				</div>
			</div>
		</div>
	</section>

	<footer>
		<div class="container">
			<p>Copyright &copy; Reg Gordon 2016, All Rights Reserved</p>
		</div>
	</footer>

</body>
</html>
